<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileFront.Views.HomePage"
             xmlns:vm="clr-namespace:MobileFront.ViewModels"
             xmlns:model="clr-namespace:MobileFront.Models"
             x:DataType="vm:AssetsListViewModel"
             Title="{Binding Title}">
    <ScrollView>
        <StackLayout>
            <ListView x:Name="assetsListView" ItemsSource="{Binding Assets}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White" Margin="10" Padding="10">
                            <StackLayout Orientation="Horizontal">
                                <StackLayout>
                                    <Label Text="{Binding Name}" FontSize="Large" />
                                    <Label Text="{Binding Department}" FontSize="Small" />
                                </StackLayout>
                                <Label Text="{Binding RemainingLifespan}" HorizontalOptions="EndAndExpand" FontSize="Medium" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>
</ContentPage>